## settings that affect terminal look and feel, which editor is preferred for cmd line, etc.

# for colorful terminals
export CLICOLOR=1
export LSCOLORS=GxFxCxDxBxegedabagaced

# for homebrew and other cmd progs that can use multiple txt editors
export EDITOR="vim"

# query `man` to determine its default pager
MANPAGER_FALLBACK="$(man -d 2>&1 | grep pager | sed -E 's/^using (.*) as pager\s*$/\1/g')"

# use vim for viewing manpages (default is /usr/bin/less)
export MANPAGER="env MAN_PN=1 MANPAGER_FALLBACK=\"${MANPAGER_FALLBACK}\" vim -M +MANPAGER -"

#export MANPAGER="env MAN_PN=1 MANPAGER_FALLBACK=\"$(man -d 2>&1 | grep pager | sed -E 's/^using (.*) as pager\s*$/\1/g')\" vim -M +MANPAGER -"

